// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-arm64-openssl-3.0.x"]
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Account {
  id       String      @id @default(uuid())
  name     String
  type     AccountType
  currency String
  opening  Float       @default(0)
  value    Float       @default(0)
  icon     String
  order    Int         @default(0)
  Category Category[]  @relation("AccountCategory")
  Period   Period[]
}

enum AccountType {
  checking
  savings
  credit
  virtual
}

model Category {
  id          String        @id @default(uuid())
  accountId   String
  name        String
  type        OperationType
  icon        String
  order       Int           @default(0)
  account     Account       @relation("AccountCategory", fields: [accountId], references: [id], onDelete: Cascade)
  Budget      Budget[]
  Transaction Transaction[] @relation("CategoryTransactions")
}

model Period {
  id        String    @id @default(uuid())
  accountId String
  name      String
  started   DateTime  @default(now())
  ended     DateTime?
  account   Account   @relation(fields: [accountId], references: [id], onDelete: Cascade)
  Budget    Budget[]
}

model Budget {
  categoryId String
  periodId   String
  value      Float
  period     Period   @relation(fields: [periodId], references: [id], onDelete: Cascade)
  category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@id(name: "categoryPeriodId", [categoryId, periodId])
}

model Transaction {
  id         String        @id @default(uuid())
  created    DateTime      @default(now())
  executed   DateTime?
  categoryId String
  name       String
  type       OperationType
  value      Float
  category   Category      @relation("CategoryTransactions", fields: [categoryId], references: [id], onDelete: Cascade)
}

enum OperationType {
  debit
  credit
}
