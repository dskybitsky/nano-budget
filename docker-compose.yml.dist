services:
  app:
    container_name: app
    build:
      context: .
      dockerfile: ./Dockerfile
    ports:
      - '3000:3000'
    command: [ "yarn", "dev" ]
    volumes:
      - .:/app
      - /app/node_modules
    depends_on:
      - db
  db:
    container_name: db
    image: postgres
    environment:
      POSTGRES_PASSWORD: nano
    volumes:
      - pgdata:/var/lib/postgresql
    ports:
      - 5432:5432

volumes:
  pgdata:
